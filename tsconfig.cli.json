{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "es2022",
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"paths": {
			"@/schemas": ["./src/schemas.ts"],
			"@/types": ["./src/types.ts"],
			"@/codes": ["./src/codes.ts"],
			"@cli/*": ["./src/cli/*"],
			"@server/*": ["./src/cli/server/*"]
		}
	},
	"include": ["src/cli", "src/*.ts"]
}
