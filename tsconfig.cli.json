{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "es2022",
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@/schemas": ["./src/schemas.ts"],
			"@/config": ["./src/cli/config.ts"],
			"@server/*": ["./src/cli/server/*"]
		}
	},
	"include": ["src/cli", "src/types.d.ts", "src/schemas.ts"]
}
