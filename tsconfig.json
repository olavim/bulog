{
	"compilerOptions": {
		"composite": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES2020",
		"lib": ["dom", "dom.iterable", "esnext"],
		"esModuleInterop": true,
		"useDefineForClassFields": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"strict": true,
		"jsx": "react-jsx",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@/schemas": ["./src/schemas.ts"],
			"@app/*": ["./src/app/*"],
			"@cli/*": ["./src/cli/*"],
			"@server/*": ["./src/cli/server/*"]
		}
	},
	"include": ["src/app", "src/cli", "src/types.d.ts", "src/schemas.ts", "bin/*.js"]
}
