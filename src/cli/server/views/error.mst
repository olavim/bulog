<!doctype html>
<html>
	<head>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"
			rel="stylesheet"
		/>
		<style>
			* {
				box-sizing: border-box;
			}
			body {
				font-family: Inter;
				background-color: #f1f5f9;
				padding: 0;
				margin: 0;
			}
			.content {
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				display: flex;
				flex-direction: column;
				align-items: center;
			}
			.content h1 {
				color: #64748b;
				margin: 0;
				font-size: 4rem;
				line-height: 1;
				font-weight: 700;
				white-space: nowrap;
			}
			.content h2 {
				color: #94a3b8;
				font-size: 1.5rem;
				line-height: 1;
				margin: 1rem 0;
				font-weight: 500;
				white-space: nowrap;
			}
			.content a {
				color: #fff;
				background-color: #0284c7;
				padding: 0.5rem 1rem;
				border-radius: 0.25rem;
				text-decoration: none;
				font-size: 1rem;
				font-weight: 500;
				margin: 1rem 0;
			}
			.content a:hover {
				background-color: #0ea5e9;
			}
			.detail-message {
				position: absolute;
				bottom: 0;
				width: 100%;
				background-color: #334155;
				font-size: 0.75rem;
				line-height: 1;
				margin: 6rem 0 0 0;
				padding: 0.5rem 0;
				font-weight: 400;
			}
			.detail-message div {
				padding: 0.5rem 1rem;
				display: flex;
			}
			.detail-message div span:first-child {
				color: rgb(148, 163, 184);
				font-weight: 500;
				flex-basis: 8rem;
				min-width: 8rem;
			}
			.detail-message div span:last-child {
				color: rgba(148, 163, 184, 0.7);
				flex-grow: 1;
			}
		</style>
	</head>
	<body>
		<div class="content">
			<h1>{{ httpStatus }} {{ httpStatusMessage }}</h1>
			<h2>{{ httpStatusMessageLong }}</h2>
			{{#showLogin}}
			<a href="/login">Sign in</a>
			{{/showLogin}}
			{{#showLogout}}
			<a href="/logout">Sign out</a>
			{{/showLogout}}
		</div>
		<div class="detail-message">
			<div>
				<span>Error code</span><span>{{ errorCode }}</span>
			</div>
			{{#errorMessage}}
			<div>
				<span>Error message</span><span>{{ errorMessage }}</span>
			</div>
			{{/errorMessage}}
			{{#devMessage}}
			<div>
				<span>Dev message</span><span>{{ devMessage }}</span>
			</div>
			{{/devMessage}}
		</div>
	</body>
</html>
